<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_einstellungen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rixxc.decisions.Einstellungen">

    <TextView
        android:text="Wählen sie ihr aktuelles Abenteuer aus:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AbenteuerAuswahlText"
        tools:layout_conversion_absoluteX="29dp"
        tools:layout_conversion_absoluteY="16dp"
        tools:layout_conversion_absoluteWidth="242dp"
        tools:layout_conversion_absoluteHeight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Spinner
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:id="@+id/Abenteuerwahl"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="59dp"
        tools:layout_conversion_absoluteWidth="352dp"
        tools:layout_conversion_absoluteHeight="24dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="49dp" />

    <Switch
        android:id="@+id/music"
        android:layout_width="110dp"
        android:layout_height="29dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="179dp"
        android:text="Musik"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="27dp"
        tools:layout_conversion_absoluteWidth="96dp"
        tools:layout_conversion_absoluteX="29dp"
        tools:layout_conversion_absoluteY="166dp"
        tools:layout_editor_absoluteY="179dp" />

    <Switch
        android:id="@+id/LandscapeMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"
        android:text="Querformat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/music"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_conversion_absoluteHeight="27dp"
        tools:layout_conversion_absoluteWidth="166dp"
        tools:layout_conversion_absoluteX="29dp"
        tools:layout_conversion_absoluteY="218dp" />

    <TextView
        android:id="@+id/CharakterAuswahText"
        android:layout_width="282dp"
        android:layout_height="18dp"
        android:text="Wählen sie ihren aktuellen Charakter aus:"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="58dp"
        tools:layout_conversion_absoluteX="29dp"
        tools:layout_conversion_absoluteY="126dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/Charakterauswahl"
        android:layout_width="352dp"
        android:layout_height="28dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="124dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
