<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Story"
        android:layout_width="327dp"
        android:layout_height="252dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="251dp" />

    <ImageView
        android:id="@+id/Owncharacter"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/characterportrait_1" />

    <ImageView
        android:id="@+id/Contactcharacter"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/characterportrait_5" />

    <ImageButton
        android:id="@+id/Actbtn"
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/round_button"
        android:contentDescription="Reaction"
        android:elevation="5dp"
        android:scaleType="fitStart"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/Owncharacter"
        app:layout_constraintRight_toLeftOf="@+id/Contactcharacter"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

</android.support.constraint.ConstraintLayout>